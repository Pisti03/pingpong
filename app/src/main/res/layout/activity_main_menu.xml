<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="szakdolgozat.istvan.pingpong.MainMenu">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Ping Pong"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/buttonSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="onButtonSingle"
        android:text="Single player" />

    <Button
        android:id="@+id/buttonMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSingle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="onButtonMulti"
        android:text="Multiplayer" />

    <Button
        android:id="@+id/buttonHighscores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMulti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="onButtonHighScores"
        android:text="High scores" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHighscores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:onClick="onButtonSettings"
        android:text="Settings" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="onButtonExit"
        android:text="Exit" />
</RelativeLayout>
